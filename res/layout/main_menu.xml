<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ff236a68"
        >

    <TextView
            android:id="@+id/tvAppName"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MenuFont"
            android:textSize="55sp"
            android:layout_centerVertical="false"
            android:layout_marginTop="25dp"
            />

    <TextView
            android:id="@+id/tvStart"
            android:layout_gravity="center"
            android:text="@string/main_menu_start"
            style="@style/MenuFont"
            android:onClick="onClick"
            />
    <TextView
            android:id="@+id/tvAbout"
            android:layout_gravity="center"
            android:text="@string/main_menu_about"
            style="@style/MenuFont"
            android:layout_below="@+id/tvStart"
            android:onClick="onClick"
            />
    <TextView
            android:id="@+id/tvExit"
            android:text="@string/main_menu_exit"
            style="@style/MenuFont"
            android:layout_below="@+id/tvAbout"
            android:onClick="onClick"
            />

</RelativeLayout>